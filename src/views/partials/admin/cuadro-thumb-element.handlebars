{{#if this}}

<div class="column cuadro-thumb-element" id="cuadro-thumb-{{this.link}}" data-id="{{this.link}}">
  <div class="ui grid">
    <div class="six wide center aligned column image-thumb" id="image-thumb-{{this.link}}">
      <img class="ui small image" src="/uploads/thumbs/{{this.link}}" />

      <div class="info">
        <div class="actions">

          <a href="javascript:;" class="deletePicture" data-id="{{this.link}}">
            <i class="ui trash icon"></i>
          </a>

        </div>
      </div>
    </div>
    <div class="ten wide column image-info">
      <div class="field">
        <label for="title">Title</label>
        <div class="ui inverted input">
          <input name="title" id="title-{{this.link}}" placeholder="Title" type="text" value="{{this.title}}">
        </div>
      </div>
    </div>
  </div>
</div>

{{else}}
<p>No foto available.</p>
{{/if}}

