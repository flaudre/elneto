<div class="column">
  <h2 class="ui left floated inverted header">Manage Galeries</h2>
  <a class="ui inverted basic button" href="/admin/galery/new">
    <i class="plus icon"></i>
    Create new
  </a>

  <table class="ui inverted table">
    <thead>
    <tr>
      <!--<th></th>-->
      <th>Título</th>
      <th>Fecha</th>
      <th>Director(a)</th>
      <th>Etiquetas</th>
      <th>Displayed</th>
      <th>Active</th>
      <th style="min-width:125px;">Actions</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <div class="ui list clearfix">
      {{#each galeries}}
        <tr id="galery_{{this._id}}" class="galery-listing">
          <!--<td id="gallery_{{this._id}}_inactive_icon">-->
            <!--{{#unless this.isActive}}-->
              <!--<i class="eye slash outline icon" title="Inactive"></i>-->
            <!--{{/unless}}-->
            <!--{{#if this.isActive}}-->
              <!--<i class="eye icon" title="Inactive"></i>-->
            <!--{{/if}}-->
          <!--</td>-->
          <td>{{this.title}}</td>
          <td>{{formatDate this.dateOfPlay}}</td>
          <td>{{this.location}}</td>
          <td>{{this.tags}}</td>
          <td>
            <div id="gallery_{{this._id}}_displayed" data-id="{{this._id}}" class="ui toggle checkbox isFavorite">
              <input type="checkbox" data-id="{{this._id}}" tabindex="0" name="isFavorite" class="hidden visible" {{#if this.isFavorite}}checked{{/if}}>
            </div>
          </td>
          <td>
            <div id="gallery_{{this._id}}_active" data-id="{{this._id}}" class="ui toggle checkbox isActive">
              <input type="checkbox" data-id="{{this._id}}" tabindex="0" name="isActive" class="hidden visible" {{#if this.isActive}}checked{{/if}}>
            </div>
          </td>
          <td>
            <a class="ui positive icon button changeOrderUp" data-id="{{this._id}}">
              <i class="angle up icon"></i>
            </a>
            <a class="ui orange icon button changeOrderDown" data-id="{{this._id}}">
              <i class="angle down icon"></i>
            </a>
            <a href="/admin/galery/{{this._id}}/modify" class="ui inverted yellow icon button">
              <i class="edit icon"></i>
            </a>
            <a data-id="{{this._id}}" class="ui inverted red icon button deleteGalery">
              <i class="delete icon"></i>
            </a>
          </td>
          <!--<td>-->
            <!--<div class="ui fitted checkbox">-->
              <!--<input class="hidden" tabindex="0" type="checkbox">-->
              <!--<label></label>-->
            <!--</div>-->
        </tr>
      {{/each}}
    </div>
    </tbody>
  </table>

  <!--{{#if galeries}}-->
    <!--<div class="ui right floated inverted compact menu">-->
      <!--<div class="ui simple dropdown item">-->
        <!--Select action-->
        <!--<i class="dropdown icon"></i>-->
        <!--<div class="menu">-->
          <!--<div class="item" id="deleteSelected">Delete selected</div>-->
        <!--</div>-->
      <!--</div>-->
    <!--</div>-->
  <!--{{/if}}-->
</div>
</div>


